<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <TextView
            android:id="@+id/askHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="58dp"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="@string/ask_height"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/askHeight"
            android:layout_alignBottom="@+id/askHeight"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/askHeight"
            android:ems="4"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:singleLine="true"
            android:text="" />

        <EditText
            android:id="@+id/foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/askHeight"
            android:layout_alignBottom="@+id/askHeight"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/askHeight"
            android:ems="2"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:singleLine="true"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/inch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/askHeight"
            android:layout_alignBottom="@+id/askHeight"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/foot"
            android:ems="2"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:singleLine="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/askWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/askHeight"
            android:layout_below="@+id/height"
            android:layout_marginTop="27dp"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="@string/ask_weight"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/askWeight"
            android:layout_alignBottom="@+id/askWeight"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/askHeight"
            android:ems="4"
            android:inputType="numberDecimal"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/txt_inch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/height"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/height" />

        <Spinner
            android:id="@+id/txt_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/weight"
            android:layout_alignLeft="@+id/txt_inch" />

        <Button
            android:id="@+id/proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_selector"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="@string/proceed" />

        <TextView
            android:id="@+id/bmi_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proceed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="kjsdnklsdnlksdnm"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/bmi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bmi_result"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="ssdjbkjsdckjsd"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />
    </RelativeLayout>

</ScrollView>